<main class="container">
  <h1>Delete Classification</h1>

  <p>Are you sure you want to delete this classification?</p>

  <h2><%= classification.classification_name %></h2>

  <form action="/inv/classification/delete" method="POST">
    <input type="hidden" name="classification_id" value="<%= classification.classification_id %>">

    <button type="submit" style="background:red; color:white; padding:8px 16px; border:none; cursor:pointer;">
      Yes, Delete
    </button>

    <a href="/inv" style="margin-left:10px;">Cancel</a>
  </form>
</main>
